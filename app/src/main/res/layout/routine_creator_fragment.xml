<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="RoutineViewModel"
            type="sheridan.climense.scales_app2.ui.routine.RoutineCreatorViewModel" />
        <variable
            name="inputs"
            type="sheridan.climense.scales_app2.model.RoutineInputs" />
    </data>

    <LinearLayout
        style="@style/Theme.Scales_app2.background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.routine.RoutineCreator">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scales"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/maj_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Major" />

                    <CheckBox
                        android:id="@+id/min_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minor" />

                    <CheckBox
                        android:id="@+id/minM_cb2"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mel.  Minor" />

                    <CheckBox
                        android:id="@+id/dim_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diminished" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/maj7_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maj 7th" />

                    <CheckBox
                        android:id="@+id/min7_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min 7th" />

                    <CheckBox
                        android:id="@+id/dom7_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dom 7th" />

                    <CheckBox
                        android:id="@+id/aug_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Augmented" />

                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Techniques"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/scales_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scales" />

                    <CheckBox
                        android:id="@+id/arp_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arpeggio" />

                    <CheckBox
                        android:id="@+id/solidch_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soild Chords" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/brch_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Br. Chords" />

                    <CheckBox
                        android:id="@+id/oct_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Octaves" />

                    <CheckBox
                        android:id="@+id/conM_cb"
                        style="@style/Theme.Scales_app2.checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Con. Motion" />
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Roots"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <Button
                    android:id="@+id/set_custRoots_bt"
                    style="@style/Theme.Scales_app2.cardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="Set Roots"
                    app:cornerRadius="5dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/enable_custRoots_sw"
                    style="@style/Theme.Scales_app2.switch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/practice_bt"
                style="@style/Theme.Scales_app2.primaryButton"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:text="Practice"
                app:layout_constraintBottom_toBottomOf="@+id/save_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/save_bt"
                app:layout_constraintTop_toTopOf="@+id/save_bt"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/save_bt"
                style="@style/Theme.Scales_app2.primaryButton"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                android:text="Save"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/save_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/save_bt"
                app:layout_constraintStart_toStartOf="@+id/save_bt"
                tools:text="No Routine to Save" />

            <TextView
                android:id="@+id/practice_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/practice_bt"
                app:layout_constraintStart_toStartOf="@+id/practice_bt"
                tools:text="No Routine to Practice" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</layout>