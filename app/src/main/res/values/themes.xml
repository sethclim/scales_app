<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scales_app2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2BAE66</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2BAE66</item>
        <!-- Customize your theme here. -->

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="Theme.Scales_app2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Scales_app2.ToolBar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/myGreen</item>
    </style>

    <!-- Main Buttons -->
    <style name="Theme.Scales_app2.primaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">#2BAE66</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <!-- Card Buttons -->
    <style name="Theme.Scales_app2.cardButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#66CF95</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <!--Checkboxes -->
    <style name="Theme.Scales_app2.checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">#000000</item>
        <item name="colorSecondary">#66CF95</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material</item>
        <item name="android:fontFamily">@font/architects_daughter</item>
    </style>

    <!-- Layout Background -->
    <style name="Theme.Scales_app2.background">
        <item name="android:background">#66CF95</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Switch -->
    <style name="Theme.Scales_app2.switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">#66CF95</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">#000000</item>
        <item name="colorSecondary">#66CF95</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/actionBarBK</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Scales_app2.savedItemCard">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.Scales_app2.recyclerBK">
        <item name="background">@color/offWhite</item>
    </style>

    <style name="Theme.Scales_app2.dialogBK">
        <item name="backgroundColor">#ECECEC</item>
    </style>

    <style name="Theme.Scales_app2.progressbar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/myGreen</item>
    </style>

</resources>